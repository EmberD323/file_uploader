<div class="files">
        <% files.forEach(function(file) { %> 
            <div class="fileContainer">
                <div class="fileButtons">
                    <form action="/<%= folder.folder_name %>/<%= file.file_name %>/downloadFile" method="GET" style="display:inline;">
                        <button type="submit" ><img src="/images/icons8-download-24.png" alt="download-outline"></button>
                        
                    </form>
                    <form action="/<%= folder.folder_name %>/<%= file.file_name %>/renamefile" method="GET" style="display:inline;">
                        <button type="submit" ><img src="/images/icons8-edit-24.png" alt="pen-outline"></button>
                    </form>
                    <form action="/<%= folder.folder_name %>/<%= file.file_name %>/deletefile" method="POST" style="display:inline;">
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this file?');"><img src="/images/icons8-delete-30.png" alt="pen-outline"></button>
                    </form>
                </div>
                <div class="fileInfo">
                    <div><%= file.file_name %> </div>
                    <a href="/<%= folder.folder_name %>/<%= file.file_name %>/details">details</a>
                    <%if(fileDetail != undefined){%>
                        <% if (fileDetail.file_name == file.file_name) {%>
                            <%- include("./fileDetails.ejs") %>
                        <%}%>
                    <%}%>
                </div>
                
            </div>
        <% }); %>
        <div class="fileContainer">
            <%- include("./file-upload.ejs") %>
        </div>
</div>

