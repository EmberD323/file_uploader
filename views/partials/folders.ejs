<div class="folders">
    <% folders.forEach(function(folder) { %>
    <div class="folderContainer">
        <div class="folderButtons">
            <form action="/<%= folder.folder_name %>/renamefile" method="GET" style="display:inline;">
                <button type="submit" ><img src="/images/icons8-edit-24.png" alt="pen-outline"></button>
            </form>
            
            <form action="/<%= folder.folder_name %>/deletefile" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Are you sure you want to delete this folder?');" ><img src="/images/icons8-delete-30.png" alt="pen-outline"></button>
            </form>
        </div>
        <div class="folderInfo">
            <a href="/<%= folder.folder_name %>"><img class="folderImage" src="/images/icons8-folder-50.png" alt="folder-white-outline" ></a>
            <a href="/<%= folder.folder_name %>"><%= folder.folder_name %> </a>
            <%if(folderRename != undefined){%>
                <% if (folderRename.folder_name == folder.folder_name) {%>
                    <%- include("./rename-folder.ejs") %>
                <%}%>
            <%}%>
            <div>Created: <%= folder.createdAt.toDateString() %></div>
        </div>
        
        

        
    </div>
    <% }); %>
</div>
